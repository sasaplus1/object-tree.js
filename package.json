{
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "typescript": "^4.6.4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  },
  "private": true,
  "scripts": {
    "build": "tsc",
    "fix": "run-s fix:*",
    "fix:fixpack": "npx fixpack",
    "fix:prettier": "prettier --write index.ts",
    "lint": "run-s lint:*",
    "lint:fixpack": "npx fixpack --dryRun",
    "lint:prettier": "prettier --check index.ts index.test.ts",
    "lint:tsc": "tsc --noEmit",
    "watch": "tsc --watch"
  }
}
