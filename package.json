{
  "name": "object-tree",
  "description": "manage object by tree structure",
  "version": "1.0.0",
  "author": "sasa+1 <sasaplus1@gmail.com>",
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.178",
    "@tsconfig/recommended": "^1.0.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.31",
    "mocha": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "files": [
    "index.d.ts",
    "dist/**/*"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/umd/index.js",
  "mocha": {
    "require": "ts-node/register",
    "extensions": [
      "ts"
    ],
    "spec": [
      "index.test.ts"
    ],
    "watch-files": [
      "index.ts",
      "index.test.ts"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  },
  "private": true,
  "readmeFilename": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/sasaplus1/object-tree.js.git"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:cjs": "tsc -p tsconfig.main.json",
    "build:umd": "swc index.ts -d dist/umd -s",
    "fix": "run-s fix:*",
    "fix:fixpack": "npx fixpack",
    "fix:prettier": "prettier --write index.ts index.test.ts",
    "lint": "run-s lint:*",
    "lint:fixpack": "npx fixpack --dryRun",
    "lint:prettier": "prettier --check index.ts index.test.ts",
    "lint:tsc": "tsc --noEmit",
    "test": "mocha",
    "watch": "tsc -p tsconfig.main.json --watch"
  },
  "sideEffects": false,
  "types": "./index.d.ts"
}
